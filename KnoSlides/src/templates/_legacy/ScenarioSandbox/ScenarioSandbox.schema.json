{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ScenarioSandbox",
  "description": "Apply concepts to realistic situations and see consequences",
  "type": "object",
  "required": ["title", "situation", "variables", "outcomes"],
  "properties": {
    "title": {
      "type": "string",
      "description": "Scenario title"
    },
    "situation": {
      "type": "object",
      "description": "The scenario setup",
      "required": ["description"],
      "properties": {
        "description": { "type": "string", "description": "Main scenario text" },
        "context": { "type": "string", "description": "Additional context" },
        "image": { "type": "string", "description": "Optional image URL" },
        "highlights": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Key phrases to visually highlight"
        }
      }
    },
    "variables": {
      "type": "array",
      "description": "Choices the learner can make",
      "minItems": 1,
      "maxItems": 5,
      "items": {
        "type": "object",
        "required": ["id", "label", "type", "options"],
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "description": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["toggle", "select", "slider"],
            "description": "Control type"
          },
          "options": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["value", "label"],
              "properties": {
                "value": { "type": "string" },
                "label": { "type": "string" }
              }
            }
          },
          "default": { "type": "string", "description": "Default selected value" }
        }
      }
    },
    "outcomes": {
      "type": "array",
      "description": "Possible outcomes based on choices",
      "items": {
        "type": "object",
        "required": ["condition", "result"],
        "properties": {
          "condition": {
            "type": "object",
            "description": "Variable values that trigger this outcome",
            "additionalProperties": { "type": "string" }
          },
          "result": {
            "type": "object",
            "required": ["title", "description"],
            "properties": {
              "title": { "type": "string" },
              "description": { "type": "string" },
              "consequences": {
                "type": "array",
                "items": { "type": "string" }
              },
              "insight": { "type": "string", "description": "Key learning takeaway" },
              "tone": {
                "type": "string",
                "enum": ["positive", "negative", "neutral", "warning"],
                "description": "Emotional tone of the outcome"
              }
            }
          }
        }
      }
    },
    "defaultOutcome": {
      "type": "object",
      "description": "Fallback outcome if no conditions match",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "consequences": { "type": "array", "items": { "type": "string" } },
        "insight": { "type": "string" },
        "tone": { "type": "string", "enum": ["positive", "negative", "neutral", "warning"] }
      }
    }
  }
}
