{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RelationshipMap",
  "description": "Visualize and explore connections between concepts",
  "type": "object",
  "required": ["centralNode", "connectedNodes"],
  "properties": {
    "title": {
      "type": "string",
      "description": "Optional title above the map"
    },
    "centralNode": {
      "type": "object",
      "description": "The central concept",
      "required": ["id", "label"],
      "properties": {
        "id": { "type": "string" },
        "label": { "type": "string" },
        "description": { "type": "string", "description": "Brief description" },
        "detail": { "type": "string", "description": "Full explanation" },
        "icon": { "type": "string" },
        "color": { "type": "string" }
      }
    },
    "connectedNodes": {
      "type": "array",
      "description": "Concepts connected to the central node",
      "minItems": 2,
      "maxItems": 8,
      "items": {
        "type": "object",
        "required": ["id", "label"],
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "description": { "type": "string" },
          "detail": { "type": "string" },
          "icon": { "type": "string" },
          "color": { "type": "string" },
          "connectsTo": {
            "type": "array",
            "items": { "type": "string" },
            "description": "IDs of other nodes this connects to (cross-connections)"
          }
        }
      }
    },
    "layout": {
      "type": "string",
      "enum": ["radial"],
      "default": "radial",
      "description": "Layout algorithm (currently only radial supported)"
    },
    "showLabelsOnLoad": {
      "type": "boolean",
      "default": true,
      "description": "Whether to show labels on nodes initially"
    }
  }
}
