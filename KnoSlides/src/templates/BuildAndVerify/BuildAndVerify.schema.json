{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BuildAndVerifySlide",
  "description": "Schema for Build & Verify template - teaches how something works and how to do it",
  "type": "object",
  "required": ["title", "learningObjective", "enablesNext", "explanationContext", "steps", "livePreview"],
  "properties": {
    "title": {
      "type": "string",
      "description": "Title of the slide"
    },
    "learningObjective": {
      "type": "string",
      "description": "What understanding this slide builds"
    },
    "enablesNext": {
      "type": "string",
      "description": "What capability it enables next"
    },
    "explanationContext": {
      "type": "object",
      "required": ["title", "content"],
      "properties": {
        "title": { "type": "string" },
        "content": { "type": "string" },
        "visualReference": {
          "type": "object",
          "properties": {
            "type": { "enum": ["code", "diagram", "image"] },
            "content": { "type": "string" },
            "language": { "type": "string" }
          }
        },
        "keyConcepts": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "phase", "title", "instruction", "hints", "requiresAction"],
        "properties": {
          "id": { "type": "string" },
          "phase": { "enum": ["explain", "guided", "construct", "outcome"] },
          "title": { "type": "string" },
          "instruction": { "type": "string" },
          "hints": {
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "object",
              "required": ["level", "content"],
              "properties": {
                "level": { "type": "number" },
                "content": { "type": "string" },
                "highlightId": { "type": "string" }
              }
            }
          },
          "requiresAction": { "type": "boolean" },
          "interactionType": { "enum": ["drag-drop", "select", "reorder", "fill-blank", "toggle"] },
          "draggables": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "content"],
              "properties": {
                "id": { "type": "string" },
                "content": { "type": "string" },
                "isCorrect": { "type": "boolean" },
                "validTargets": { "type": "array", "items": { "type": "string" } }
              }
            }
          },
          "dropZones": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "label"],
              "properties": {
                "id": { "type": "string" },
                "label": { "type": "string" },
                "expectedItemId": { "type": "string" },
                "placeholder": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "livePreview": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { "enum": ["table", "output", "code", "diagram", "json"] },
        "title": { "type": "string" },
        "tableSchema": {
          "type": "object",
          "properties": {
            "columns": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["key", "label", "type"],
                "properties": {
                  "key": { "type": "string" },
                  "label": { "type": "string" },
                  "type": { "enum": ["string", "number", "boolean"] }
                }
              }
            }
          }
        },
        "initialData": { "type": "array" }
      }
    },
    "sourceData": {
      "type": "object",
      "properties": {
        "tables": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "schema", "data"],
            "properties": {
              "name": { "type": "string" },
              "schema": { "type": "object" },
              "data": { "type": "array" }
            }
          }
        }
      }
    },
    "completionMessage": { "type": "string" }
  }
}
