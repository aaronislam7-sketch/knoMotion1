{
  "schema_version": "5.1",
  "scene_id": "hook1a-knodovia",
  "template_id": "Hook1AQuestionBurst",
  
  "meta": {
    "title": "HOOK 1A: Question Burst - Knodovia (Agnostic)",
    "description": "Provocative question about geography - using agnostic template system",
    "tags": ["module:welcome-knodovia", "pedagogy:hook", "variant:1A-agnostic"],
    "domain": "geography"
  },
  
  "style_tokens": {
    "mode": "notebook",
    "colors": {
      "bg": "#FFF9F0",
      "accent": "#E74C3C",
      "accent2": "#E67E22",
      "ink": "#1A1A1A"
    },
    "fonts": {
      "header": "'Cabin Sketch', cursive",
      "secondary": "'Permanent Marker', cursive",
      "body": "Inter, sans-serif",
      "size_question": 92,
      "size_welcome": 72,
      "size_subtitle": 32
    }
  },
  
  "beats": {
    "entrance": 0.6,
    "questionStart": 0.6,
    "moveUp": 2.0,
    "emphasis": 4.2,
    "wipeQuestions": 5.5,
    "mapReveal": 6.5,
    "transformMap": 9.0,
    "welcome": 10.0,
    "subtitle": 12.0,
    "breathe": 13.5,
    "exit": 15.0
  },
  
  "question": {
    "lines": [
      { "text": "What if geography", "emphasis": "normal" },
      { "text": "was measured in mindsets?", "emphasis": "high" }
    ],
    "layout": {
      "arrangement": "stacked",
      "stagger": 0.3,
      "verticalSpacing": 80,
      "basePosition": "center",
      "centerStack": true
    },
    "animation": {
      "entrance": "fadeUp",
      "entranceDuration": 0.9,
      "entranceDistance": 50,
      "movePattern": "firstMoves",
      "emphasis": "pulse"
    }
  },
  
  "hero": {
    "type": "roughSVG",
    "asset": "knodovia-map",
    "position": "center",
    "animation": {
      "entrance": "drawOn",
      "entranceBeat": "mapReveal",
      "entranceDuration": 1.3
    },
    "transforms": [
      {
        "beat": "transformMap",
        "targetScale": 0.4,
        "targetPos": { "x": 600, "y": -300 },
        "duration": 1.2
      }
    ]
  },
  
  "welcome": {
    "text": "Welcome to Knodovia",
    "position": "center",
    "effects": ["shimmer"]
  },
  
  "subtitle": {
    "text": "A place where your perspective shapes the landscape...",
    "position": "bottom-center"
  }
}
