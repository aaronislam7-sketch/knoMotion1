{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TimelineStrip",
  "description": "Horizontal timeline with staggered up/down cards. Uses SDK TimelineCard composition.",
  "type": "object",
  "required": ["events", "beats"],
  "properties": {
    "events": {
      "type": "array",
      "description": "Array of timeline events",
      "items": {
        "type": "object",
        "required": ["title"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Event title"
          },
          "subtitle": {
            "type": "string",
            "description": "Subtitle, date, or time period"
          },
          "description": {
            "type": "string",
            "description": "Additional description text"
          },
          "icon": {
            "type": "string",
            "description": "Optional emoji or icon"
          },
          "badge": {
            "type": "string",
            "description": "Badge text (e.g., 'Step 1', '2024')"
          },
          "color": {
            "type": "string",
            "description": "Accent color for this node. Theme keys or hex/rgb."
          },
          "beats": {
            "type": "object",
            "description": "Per-node beat timing (overrides global stagger)",
            "properties": {
              "start": {
                "type": "number",
                "description": "Start time for this node in seconds"
              }
            }
          }
        }
      },
      "minItems": 2
    },
    "animation": {
      "type": "string",
      "enum": ["slide", "scale", "bounce", "fade"],
      "default": "slide",
      "description": "Animation type for card reveals"
    },
    "staggerDelay": {
      "type": "number",
      "default": 0.4,
      "minimum": 0,
      "description": "Default delay between nodes in seconds (when per-node beats not specified)"
    },
    "animationDuration": {
      "type": "number",
      "default": 0.5,
      "minimum": 0.1,
      "description": "Animation duration per node in seconds"
    },
    "showConnectors": {
      "type": "boolean",
      "default": true,
      "description": "Show connecting line between nodes"
    },
    "connectorColor": {
      "type": "string",
      "default": "textMuted",
      "description": "Connector line color. Theme keys or hex/rgb."
    },
    "cardVariant": {
      "type": "string",
      "enum": ["default", "bordered", "glass"],
      "default": "default",
      "description": "Card variant for all timeline cards"
    },
    "beats": {
      "type": "object",
      "required": ["start"],
      "properties": {
        "start": {
          "type": "number",
          "description": "Global start time in seconds"
        }
      }
    },
    "position": {
      "type": "object",
      "description": "Slot position from layout resolver",
      "properties": {
        "left": { "type": "number" },
        "top": { "type": "number" },
        "width": { "type": "number" },
        "height": { "type": "number" }
      }
    },
    "style": {
      "type": "object",
      "description": "Optional style overrides (passed to TimelineCard)",
      "properties": {
        "cardWrapper": { "type": "object" },
        "wrapper": { "type": "object" },
        "card": { "type": "object" },
        "content": { "type": "object" },
        "badge": { "type": "object" },
        "icon": { "type": "object" },
        "title": { "type": "object" },
        "subtitle": { "type": "object" },
        "description": { "type": "object" },
        "connector": { "type": "object" }
      }
    }
  },
  "examples": [
    {
      "events": [
        { "title": "Start", "subtitle": "Day 1", "icon": "üöÄ", "badge": "Step 1" },
        { "title": "Learn", "subtitle": "Week 1", "icon": "üìö", "badge": "Step 2" },
        { "title": "Practice", "subtitle": "Week 2", "icon": "üí™", "badge": "Step 3" },
        { "title": "Master", "subtitle": "Month 1", "icon": "üèÜ", "badge": "Step 4" }
      ],
      "animation": "slide",
      "showConnectors": true,
      "beats": { "start": 1.0 }
    },
    {
      "events": [
        { "title": "2020", "subtitle": "Foundation", "color": "secondary" },
        { "title": "2021", "subtitle": "Growth" },
        { "title": "2022", "subtitle": "Expansion", "color": "accentGreen" },
        { "title": "2023", "subtitle": "Today", "color": "primary", "icon": "‚≠ê" }
      ],
      "animation": "bounce",
      "staggerDelay": 0.5,
      "cardVariant": "bordered",
      "beats": { "start": 0.5 }
    },
    {
      "events": [
        { "title": "Idea", "icon": "üí°", "beats": { "start": 1.0 } },
        { "title": "Research", "icon": "üîç", "beats": { "start": 2.0 } },
        { "title": "Build", "icon": "üîß", "beats": { "start": 3.0 } },
        { "title": "Launch", "icon": "üöÄ", "beats": { "start": 4.5 } }
      ],
      "animation": "scale",
      "beats": { "start": 1.0 },
      "_comment": "Per-node beats for precise timing control"
    }
  ],
  "useCase": {
    "description": "Timeline for showing progression, history, or steps",
    "when": "Use for chronological events, milestones, or multi-step processes",
    "layout": "Cards alternate up/down along a horizontal timeline axis"
  },
  "sizingBehavior": {
    "description": "TimelineStrip uses horizontal layout with up/down card stagger",
    "width": "Cards evenly distributed across slot width with padding",
    "height": "Cards positioned above/below center line based on index (even=up, odd=down)",
    "cardWidth": "160-280px depending on content",
    "positioning": "Uses SDK TimelineCard composition for consistent styling"
  }
}
