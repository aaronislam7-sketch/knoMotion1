{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SideBySideCompare",
  "description": "Left vs right comparison blocks with text, icons, and animated reveals. Features hand-drawn divider options.",
  "type": "object",
  "required": ["left", "right", "beats"],
  "properties": {
    "left": {
      "type": "object",
      "description": "Left side configuration",
      "properties": {
        "title": {
          "type": "string",
          "description": "Main title for left side"
        },
        "subtitle": {
          "type": "string",
          "description": "Subtitle or description"
        },
        "icon": {
          "type": "string",
          "description": "Emoji or icon"
        },
        "items": {
          "type": "array",
          "description": "List of bullet points",
          "items": {
            "oneOf": [
              { "type": "string" },
              {
                "type": "object",
                "properties": {
                  "text": { "type": "string" },
                  "icon": { "type": "string" }
                }
              }
            ]
          }
        },
        "color": {
          "type": "string",
          "description": "Accent color for this side"
        },
        "backgroundColor": {
          "type": "string",
          "description": "Background color for content area"
        }
      }
    },
    "right": {
      "type": "object",
      "description": "Right side configuration (same structure as left)",
      "properties": {
        "title": { "type": "string" },
        "subtitle": { "type": "string" },
        "icon": { "type": "string" },
        "items": { "type": "array" },
        "color": { "type": "string" },
        "backgroundColor": { "type": "string" }
      }
    },
    "animation": {
      "type": "string",
      "enum": ["slide", "fade", "scale", "bounce", "reveal", "slideIn", "fadeIn", "scaleIn", "bounceIn"],
      "default": "slide",
      "description": "Animation type for side reveals"
    },
    "staggerDelay": {
      "type": "number",
      "default": 0.3,
      "minimum": 0,
      "description": "Delay between sides in seconds"
    },
    "animationDuration": {
      "type": "number",
      "default": 0.6,
      "minimum": 0.1,
      "description": "Animation duration per side in seconds"
    },
    "dividerType": {
      "type": "string",
      "enum": ["none", "line", "dashed", "vs", "equals", "arrows", "lottie"],
      "default": "vs",
      "description": "Style of center divider. 'equals': hand-drawn equals sign. 'arrows': hand-drawn opposing arrows. 'lottie': animated Lottie."
    },
    "dividerLabel": {
      "type": "string",
      "default": "VS",
      "description": "Label for VS badge OR lottie animation ref for 'lottie' type (e.g., 'burst', 'stars', 'celebration', 'success')"
    },
    "dividerColor": {
      "type": "string",
      "default": "primary",
      "description": "Divider color. Theme keys: primary, secondary, accentGreen, doodle. Or hex/rgb."
    },
    "alignment": {
      "type": "string",
      "enum": ["center", "inner"],
      "default": "center",
      "description": "Content alignment. 'center': both sides centered. 'inner': content faces the divider."
    },
    "beats": {
      "type": "object",
      "required": ["start"],
      "properties": {
        "start": {
          "type": "number",
          "description": "Start time in seconds"
        }
      }
    },
    "position": {
      "type": "object",
      "description": "Slot position from layout resolver",
      "properties": {
        "left": { "type": "number" },
        "top": { "type": "number" },
        "width": { "type": "number" },
        "height": { "type": "number" }
      }
    },
    "style": {
      "type": "object",
      "description": "Optional style overrides",
      "properties": {
        "container": { "type": "object" },
        "sideWrapper": { "type": "object" },
        "sideContent": { "type": "object" },
        "icon": { "type": "object" },
        "title": { "type": "object" },
        "subtitle": { "type": "object" },
        "itemsList": { "type": "object" },
        "item": { "type": "object" },
        "itemText": { "type": "object" },
        "dividerWrapper": { "type": "object" },
        "dividerLine": { "type": "object" },
        "vsContainer": { "type": "object" },
        "vsBadge": { "type": "object" },
        "vsText": { "type": "object" },
        "equalsContainer": { "type": "object" },
        "arrowsContainer": { "type": "object" },
        "lottieContainer": { "type": "object" }
      }
    }
  },
  "examples": [
    {
      "left": {
        "title": "Before",
        "icon": "üòï",
        "items": [
          "Confusing syntax",
          "Hard to debug",
          "Slow performance"
        ],
        "color": "secondary"
      },
      "right": {
        "title": "After",
        "icon": "üéâ",
        "items": [
          "Clean code",
          "Easy debugging",
          "Lightning fast"
        ],
        "color": "accentGreen"
      },
      "animation": "slide",
      "dividerType": "vs",
      "beats": { "start": 1.0 }
    },
    {
      "left": {
        "title": "Learning",
        "subtitle": "The journey begins",
        "icon": "üìö"
      },
      "right": {
        "title": "Mastery",
        "subtitle": "The destination",
        "icon": "üèÜ"
      },
      "animation": "reveal",
      "dividerType": "equals",
      "dividerColor": "doodle",
      "beats": { "start": 0.5 },
      "_comment": "Uses hand-drawn equals sign for Knode style"
    },
    {
      "left": {
        "title": "Theory",
        "items": ["Concepts", "Principles", "Foundations"]
      },
      "right": {
        "title": "Practice",
        "items": ["Exercises", "Projects", "Real-world"]
      },
      "animation": "bounce",
      "dividerType": "arrows",
      "dividerColor": "accentGreen",
      "beats": { "start": 0.8 },
      "_comment": "Uses hand-drawn arrows pointing at each other"
    },
    {
      "left": {
        "title": "Input",
        "icon": "‚¨áÔ∏è"
      },
      "right": {
        "title": "Output",
        "icon": "‚¨ÜÔ∏è"
      },
      "animation": "scale",
      "dividerType": "lottie",
      "dividerLabel": "burst",
      "beats": { "start": 1.0 },
      "_comment": "Uses animated Lottie burst effect between sides"
    }
  ],
  "dividerTypes": {
    "none": "No divider shown",
    "line": "Simple solid vertical line",
    "dashed": "Dashed vertical line",
    "vs": "Circular VS badge with connecting lines",
    "equals": "Hand-drawn animated equals sign (Knode sketchbook style)",
    "arrows": "Hand-drawn arrows pointing at each other (Knode style)",
    "lottie": "Animated Lottie effect (specify animation in dividerLabel)"
  },
  "sizingBehavior": {
    "description": "SideBySideCompare splits the slot into two equal halves",
    "width": "Each side uses 48% of slot width with divider in center",
    "height": "Content is vertically centered within full slot height",
    "fontScaling": "Base font size scales with slot height (16-32px range)",
    "divider": "Divider occupies 4% of width in center, badges/drawings sized to font"
  }
}
